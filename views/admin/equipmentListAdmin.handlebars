<br>
<div class="row mt-5">

    <div class="col-md-12 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3"><i class="fas fa-list"></i> View Equipment</h1>
            <div class="row text-center m-auto">
                {{#each equ}}
                <div class="col-lg-3 m-auto" style="width: 18rem;">
                    <div class="card m-2">
                        <img src="/{{this.type}}.png" class="card-img-top" alt="{{this.type}}">
                        <div class="card-body">
                            <p class="card-text">{{this.name}}</p>
                            <button id="{{@index}}" name="button1" type="button" class="viewapp btn btn-primary"
                                data-toggle="modal" data-target="#myModal">More</button>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>

        <div class="container">
            <!-- Modal -->
            <div class="modal fade" id="myModal" role="dialog">
                <div class="modal-dialog">

                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <h2 class="modal-title" style="text-decoration: underline;">Equipment Information</h2>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                        </div>


                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script>

    $('.viewapp').on('click', function (event) {
        console.log(this.id)
        var id = parseInt(this.id)
        var equ = {{{ get equ }}}
 

        var html = '';
    html += `
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row no-gutters">
                    <div class="col-md-4">
                    <img class="card-img" src="/${equ[id].type}.png" alt="Equipment">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title text-danger">${equ[id].name}:</h5>
                            <p class="card-text">Type   : ${equ[id].type}</p>
                            <p class="card-text">Cost     : ${equ[id].cost}</p>
                            <h5 class="card-title text-danger">Supplier Details:</h5>
                            <p class="card-text">${equ[id].supplier_name}    ${equ[id].supplier_phone}</p>
                        </div>
                    </div>
                </div>
                <div class="row no-gutters">
                    <a href="/admin/deleteEquipment/${equ[id]._id}" onclick="doConfirm(event)" name="delete" id="3" title="Delete User" type="button" class="col-2 btn btn-danger">
                        <i class="fa fa-trash" aria-hidden="true" style="font-size:28px"></i>
                    </a>
                    <a href="/admin/updateEquipmentPage/${equ[id]._id}" name="delete" id="3" title="Delete User" type="button" class="offset-8 col-2 btn btn-info">
                        <i class="fa fa-wrench" aria-hidden="true" style="font-size:28px"></i>
                    </a>
                </div>
            </div>
        `;

    $('.modal-body').html(html)


    doConfirm = function (event) {
        if (!confirm('Are you sure you want to delete this equipment?')) {
            event.preventDefault()
        }
    }
  })

</script>