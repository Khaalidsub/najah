<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">

                {{#if addMerchandise}}
                <div class="alert alert-success" role="alert">
                    {{{addMerchandise}}}
                </div>
                {{/if}}    


            <h1 class="text-center mb-3"><i class="fa fa-plus"></i> Add Merchandise</h1>
            <form action="/admin/addMerchandise" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="name" id="name" name="name" class="form-control"
                        placeholder="Name of The merchandise" />
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input type="text" id="description" required name="description" class="form-control"
                        placeholder="Provide a brief Description" />
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="price">Price</label>
                        <input type="number" class="form-control" required name="price" required
                            placeholder="Enter Price in RM">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="quantity">Quantity</label>
                        <input type="number" required class="form-control" name="quantity" required
                            placeholder="Enter the quantiy">
                    </div>
                </div>
                <div class="form-group">
                    <label for="category">Category</label>
                    <select name="category" id="">
                        <option value="clothing">Clothing</option>
                        <option value="fitness">Fitness</option>
                    </select>
                </div>

                {{#if imageError}}
                <div class="alert alert-danger" role="alert">
                    {{{imageError}}}
                </div>
                {{/if}}

                <div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" id="gender" name="image" class="form-control" placeholder="upload Image" />
                </div>

                <button type="submit" class="btn btn-primary btn-lg">Add Merchandise</button>
            </form>

        </div>
    </div>
</div>